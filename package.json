{
  "name": "oletus",
  "version": "4.0.0",
  "description": "Minimal ECMAScript Module test runner",
  "scripts": {
    "test": "node --experimental-modules --no-warnings test/index.js",
    "example": "node --experimental-modules --no-warnings example.js"
  },
  "files": [
    "*.d.ts",
    "batch-promise.js",
    "cli.js",
    "crawler.js",
    "oletus.js",
    "report-concise.js",
    "report-verbose.js",
    "report.js",
    "runner.js",
    "util.js"
  ],
  "repository": "bearror/oletus",
  "type": "module",
  "main": "oletus.js",
  "bin": "cli.js",
  "types": "oletus.d.ts",
  "exports": {
    ".": "./oletus.js",
    "./report-concise.mjs": "./report-concise.js",
    "./report-verbose.mjs": "./report-verbose.js",
    "./runner.mjs": "./runner.js"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "author": "bearror",
  "license": "MIT"
}
